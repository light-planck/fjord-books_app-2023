<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <p>
      <% if user_signed_in? %>
        <strong><%= current_user.email %></strong>でログイン中
        <%= link_to t('views.navigation.users'), users_path %> |
        <%= link_to t('views.navigation.edit_profile'), edit_user_registration_path %> |
        <%= link_to t('views.navigation.logout'), destroy_user_session_path, data: { "turbo-method": :delete } %>
      <% else %>
        <%= link_to t('views.navigation.sign_up'), new_user_registration_path %> |
        <%= link_to t('views.navigation.sign_in'), new_user_session_path %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
